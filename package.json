{
  "name": "anki-app",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "oxlint",
    "preview": "vite preview",
    "generate-assets": "pwa-assets-generator --preset minimal public/logo.png",
    "generate-assets-2023": "pwa-assets-generator --preset minimal-2023 public/logo.png",
    "checkTs": "tsc --noEmit",
    "prepare": "husky",
    "tauri": "tauri",
    "init:android": "tauri android init",
    "init:ios": "tauri ios init",
    "dev:android": "RUST_BACKTRACE=1 tauri android dev",
    "dev:ios": "RUST_BACKTRACE=1 tauri ios dev 'iPhone 16'",
    "build:desktop": "tauri build --target aarch64-apple-darwin"
  },
  "dependencies": {
    "@react-spring/web": "^10.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.10",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-router": "^1.121.34",
    "axios": "^1.10.0",
    "clsx": "^2.1.1",
    "logrocket": "^10.1.0",
    "logrocket-react": "6.0.3",
    "million": "^3.1.11",
    "postcss": "^8.5.6",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "react": "^19.1.0",
    "react-confetti": "^6.4.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-joyride": "^2.9.3",
    "react-scan": "^0.3.4",
    "react-toastify": "^11.0.5",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@tanstack/router-devtools": "^1.121.34",
    "@tanstack/router-vite-plugin": "^1.121.34",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vite-pwa/assets-generator": "^1.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-pwa": "^1.0.0",
    "vite-plugin-vercel": "^9.0.7",
    "workbox-build": "^7.3.0",
    "workbox-window": "^7.3.0"
  }
}
